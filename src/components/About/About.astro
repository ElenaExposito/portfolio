---
import Dropdown from "../Dropdown/Dropdown.astro";
import "./About.css";
import AboutTopWave from "../../assets/images/about-wave-top.svg?raw";

import { formacion } from "../../data/data-about/formacion";
import { formacionComplementaria } from "../../data/data-about/formacion-complementaria";
import { experiencia } from "../../data/data-about/experiencia";
---

<section class="about-me" id="about-me">
  <Fragment set:html={AboutTopWave} />

  <div class="about-me-container">
    <h3>Sobre mí</h3>
    <div class="about-me-content">
      <h4>Formación</h4>
      <Dropdown items={formacion} />
    </div>
    <div class="about-me-content">
      <h4>Formación complementaria</h4>
      <Dropdown items={formacionComplementaria} />
    </div>
    <div class="about-me-content experience">
      <h4>Experiencia</h4>
      <Dropdown items={experiencia} />
    </div>
  </div>
</section>
