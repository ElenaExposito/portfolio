---
import "../styles/reset.css";
---

<header class="navigation">
  <nav class="nav">
    <ul class="nav-list">
      <li class="proyects-nav">
        <a href="#proyects"
          >Proyectos <span class="proyects-nav-slash">/</span></a
        >
      </li>
      <li class="about-me-nav"><a href="#about-me">Sobre mí</a></li>
      <li class="contact-nav"><a href="#contact">Contacto</a></li>
    </ul>
  </nav>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navList = document.querySelector(".nav-list");
    if (!navList) return;
    window.addEventListener("scroll", () => {
      if (window.scrollY > 50) {
        // Cambia el valor según el scroll deseado
        navList.classList.add("scrolled");
      } else {
        navList.classList.remove("scrolled");
      }
    });
  });
</script>

<style>
  @font-face {
    font-family: "Afacad Italic";
    src: url("@src/fonts/Afacad-Italic[wght].ttf") format("truetype");
    font-weight: normal;
    font-style: normal;
  }

  .nav {
    position: fixed;
    z-index: 2;
    top: 0;
    right: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    color: #0e0c14;
  }

  .nav-list {
    display: flex;
    border-radius: 3.2rem;
    transition: all 0.2s linear;
    gap: 1.5rem;
    padding: 0.5rem;
  }

  .nav-list.scrolled {
    background: hsla(45, 17%, 95%, 0.8);
    backdrop-filter: blur(20px) saturate(1.7);
    transition: all 0.3s ease-in-out;
  }

  .proyects-nav,
  .about-me-nav,
  .contact-nav {
    padding: 0.5rem;
    border-radius: 3.2rem;
  }

  .proyects-nav {
    background-color: hsla(45, 17%, 95%, 0.8);
  }

  .proyects-nav-slash {
    padding: 0.1rem 0.5rem;
    box-shadow: inset 0 0 0 2px rgba(0, 0, 0, 0.1);
    border-radius: 0.25rem;
  }
</style>
