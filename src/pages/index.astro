---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/reset.css";
import { Lumiflex } from "../components/Lumiflex/index.tsx";
import Header from "../components/Header.astro";
import Proyects from "../components/Proyects/Proyects.astro";
---

<Layout>
  <Header />
  <Lumiflex client:load />
  <div class="section-welcome">
    <Welcome />
  </div>
  <Proyects />
</Layout>

<style>
  .section-welcome {
    position: relative;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* Cambiado de "center" a "flex-start" */
    z-index: 1;
  }
</style>
